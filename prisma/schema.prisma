generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  username String
  password String
  // For MVP purposes, this field acts as a simple role flag
  isAdmin Boolean @default(false)
  // 1:N relation with Academy
  academies Academy[]
  // 1:N relation with Student
  students Student[]
  
}

model Academy{
  id Int @id @default(autoincrement())
  name String
  // Foreign key for the 1:N relation with User
  userId Int
  user User @relation(fields: [userId], references: [id])
  // 1:N relation with Student
  students Student[]
}

model Student{
  id Int @id @default(autoincrement())
  firstname String
  lastname String
  birthdate DateTime
  // Foreign key for the 1:N relation with User
  userId Int
  user User @relation(fields: [userId], references: [id])
  // Foreign key for the 1:N relation with Academy
  academyId Int
  academy Academy @relation(fields: [academyId], references: [id])
  // 1:N relation with Participant  
  participants Participant[]
}

model Championship{
  id Int @id @default(autoincrement())
  name String
  startDate DateTime
  location String
  // N:N relation with Category via CategoriesOnChampionships
  categories CategoriesOnChampionships[]
  // N:N relation with Student via Participant
  participants Participant[]
}

model Category{
  id Int @id @default(autoincrement())
  name String
  // N:N relation with Championship via CategoriesOnChampionships
  championships CategoriesOnChampionships[]
}

model CategoriesOnChampionships {
  championshipId Int
  categoryId     Int

  championship Championship @relation(fields: [championshipId], references: [id])
  category     Category     @relation(fields: [categoryId], references: [id])

  @@id([championshipId, categoryId])
}

model Participant {
  id             Int       @id @default(autoincrement())
  studentId      Int
  championshipId Int

  student      Student      @relation(fields: [studentId], references: [id])
  championship Championship @relation(fields: [championshipId], references: [id])

  @@unique([studentId, championshipId])
}



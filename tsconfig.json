{
  "compilerOptions": {
    "target": "ES2020",                                  
    "module": "commonjs",  
    "outDir": "./dist",                                   
    "rootDir": "./src",
    "strict": true,                                      
    "esModuleInterop": true,                             
    "moduleResolution": "Node",                     
    "resolveJsonModule": true,                                    
    "forceConsistentCasingInFileNames": true,            
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}